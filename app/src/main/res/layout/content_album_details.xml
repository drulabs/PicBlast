<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.drulabs.picblast.activities.imgur.AlbumDetails"
    tools:showIn="@layout/activity_album_details">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_album_pics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:visibility="visible"
            tools:listitem="@layout/item_image_big">

        </android.support.v7.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/album_pics_loader"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="top|center_horizontal"
            android:visibility="gone"/>
    </FrameLayout>


</android.support.v4.widget.NestedScrollView>
